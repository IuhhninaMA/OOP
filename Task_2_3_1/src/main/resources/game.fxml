<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>
<AnchorPane fx:id="anchorPane"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            onKeyPressed="#moveSquareKeyPressed"
            prefHeight="600.0"
            prefWidth="600.0"
            style="-fx-background-color: #EAF4D3;"
            xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.nsu.yukhnina.snake.controls.Controller">
        <HBox>
                <padding>
                        <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
        <Canvas fx:id="canvas"
                height="400.0"
                layoutX="100.0"
                layoutY="100.0"
                width="400.0"
                AnchorPane.leftAnchor="10"
                AnchorPane.topAnchor="10"/>
        <VBox>
                <padding>
                        <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <Button
                        fx:id="startButton"
                        layoutX="32.0"
                        layoutY="34.0"
                        mnemonicParsing="false"
                        onKeyPressed="#moveSquareKeyPressed"
                        onMouseClicked="#startGame"
                        text="Start new game" />
                <Button
                        fx:id="mediumLevel"
                        layoutX="32.0"
                        layoutY="34.0"
                        onKeyPressed="#moveSquareKeyPressed"
                        onMouseClicked="#mediumLevel"
                        text="Set medium level" />
                <Button
                        fx:id="hardLevel"
                        layoutX="32.0"
                        layoutY="34.0"
                        onKeyPressed="#moveSquareKeyPressed"
                        onMouseClicked="#hardLevel"
                        text="Set hard level" />
                <Button
                        fx:id="setSmallSize"
                        layoutX="32.0"
                        layoutY="34.0"
                        onKeyPressed="#moveSquareKeyPressed"
                        onMouseClicked="#smallSize"
                        text="Set big size" />
                <Button
                        fx:id="setBigSize"
                        layoutX="32.0"
                        layoutY="34.0"
                        onKeyPressed="#moveSquareKeyPressed"
                        onMouseClicked="#bigSize"
                        text="Set small size" />
                <HBox>
                <Label text="Score: "/>
                <Label fx:id="score" layoutX="681.0" layoutY="145.0" prefHeight="32.0" prefWidth="34.0">
                        <font>
                                <Font size="10.0" />
                        </font></Label>
                </HBox>
        </VBox>
        </HBox>
</AnchorPane>